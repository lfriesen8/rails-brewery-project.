<h1>Search Results</h1>

<% if @beers.empty? && @breweries.empty? %>
  <p>No results found for "<%= params[:q] %>". Try a different search term. </p>
<% else %>
  <% unless @beers.empty? %>
    <h2>Beers</h2>
    <ul>
      <% @beers.each do |beer| %>
        <li><%= link_to beer.name, beer_path(beer) %> - <%= beer.style %> (<%= beer.abv %>% ABV)</li>
      <% end %>
    </ul>
  <% end %>

  <% unless @breweries.empty? %>
    <h2>Breweries</h2>
    <ul>
      <% @breweries.each do |brewery| %>
        <li><%= link_to brewery.name, brewery_path(brewery) %> - Located in <%= brewery.city %>, <%= brewery.state %></li>
      <% end %>
    </ul>
  <% end %>
<% end %>

<%= link_to "Back to Home", root_path, class: "btn btn-primary" %>
